@model AttrOleo.Models.Pressione

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pressione</h4>
<hr />
<div class="row row-cols-2">
    <div class="col-lg-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SerialNoFabbrica" class="control-label"></label>
                <input asp-for="SerialNoFabbrica" class="form-control" />
                <span asp-validation-for="SerialNoFabbrica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="control-label"></label>
                <input asp-for="Volume" class="form-control" />
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fluido" class="control-label"></label>
                <input asp-for="Fluido" class="form-control" />
                <span asp-validation-for="Fluido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descrizione" class="control-label"></label>
                <input asp-for="Descrizione" class="form-control" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ubicazione" class="control-label"></label>
                <input asp-for="Ubicazione" class="form-control" />
                <span asp-validation-for="Ubicazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Norma" class="control-label"></label>
                <input asp-for="Norma" class="form-control" />
                <span asp-validation-for="Norma" class="text-danger"></span>
            </div>
            <input asp-for="PrimaVerificaFunzionalita" class="form-control" type="hidden" />
            <input asp-for="DataCreazione" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="VerificaPrimoImpianto" class="control-label"></label>
                <input asp-for="VerificaPrimoImpianto" class="form-control" />
                <span asp-validation-for="VerificaPrimoImpianto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VerificaFunzionalita" class="control-label"></label>
                <input asp-for="VerificaFunzionalita" class="form-control" />
                <span asp-validation-for="VerificaFunzionalita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VerificaIntegrita" class="control-label"></label>
                <input asp-for="VerificaIntegrita" class="form-control" />
                <span asp-validation-for="VerificaIntegrita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScadenzaFunzionalita" class="control-label"></label>
                <input asp-for="ScadenzaFunzionalita" class="form-control" />
                <span asp-validation-for="ScadenzaFunzionalita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScadenzaIntegrita" class="control-label"></label>
                <input asp-for="ScadenzaIntegrita" class="form-control" />
                <span asp-validation-for="ScadenzaIntegrita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reparto" class="control-label"></label>
                <input asp-for="Reparto" class="form-control" />
                <span asp-validation-for="Reparto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Impianto" class="control-label"></label>
                <input asp-for="Impianto" class="form-control" />
                <span asp-validation-for="Impianto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricola" class="control-label"></label>
                <input asp-for="Matricola" class="form-control" />
                <span asp-validation-for="Matricola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costruttore" class="control-label"></label>
                <input asp-for="Costruttore" class="form-control" />
                <span asp-validation-for="Costruttore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stato" class="control-label"></label>
                <select asp-for="Stato" class="form-control" id="stato"></select>
                <span asp-validation-for="Stato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PressioneMassima" class="control-label"></label>
                <input asp-for="PressioneMassima" class="form-control" />
                <span asp-validation-for="PressioneMassima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscoMontato" class="control-label"></label>
                @Html.DropDownList("LottoNo", (IEnumerable<SelectListItem>)ViewBag.ListaDischi, "-- Nessun disco montato --", new { @class = "form-control" })
                <span asp-validation-for="DiscoMontato" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="ValvolaMontata" class="control-label"></label>
                @Html.DropDownList("AggiungiValvola", (IEnumerable<SelectListItem>)ViewBag.Valvole, "-- Seleziona valvola da aggiungere --", new { @class = "form-control" })
                <span asp-validation-for="ValvolaMontata" class="text-danger" />
                <input type="submit" name="operationType" value="AddValvola" />
            </div>
            <div class="form-group">
                <label asp-for="TecnicoReferente" class="control-label"></label>
                @Html.DropDownList("TecnicoReferente", (IEnumerable<SelectListItem>)ViewBag.UserName, "-- Nessun Tecnico Referente --", new { @class = "form-control" })
                <span asp-validation-for="TecnicoReferente" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" name="operationType" value="AddFile" class="btn btn-primary" />
                <input type="submit" name="operationType" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-lg-9">

        @if ((Model.ValvolaMontata != null) && (Model.ValvolaMontata.Count > 0))
        {
            <h1>Valvole montate</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ValvolaMontata[0].Valvola.Area)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ValvolaMontata[0].Valvola.Reparto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ValvolaMontata[0].Valvola.Impianto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ValvolaMontata[0].Valvola.Matricola)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ValvolaMontata[0].Valvola.Modello)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ValvolaMontata[0].Valvola.ScadenzaTaratura)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ValvolaMontata[0].Valvola.Stato)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ValvolaMontata)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valvola.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valvola.Reparto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valvola.Impianto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valvola.Matricola)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valvola.Modello)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valvola.ScadenzaTaratura)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valvola.Stato)
                            </td>
                            <td>
                                0
                                <a asp-action="Details" asp-controller="Valvole" asp-route-id="@item.Valvola.Id">Dettagli</a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("RW"))
                                {
                                    <a asp-action="DissociaValvola" asp-route-id="@item.PressioneID" asp-route-valvolaid="@item.ValvolaID">Dissocia</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }


        @if (Model.DiscoMontato != null)
        {
            <h1>Disco di rottura montato</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DiscoMontato.LottoNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiscoMontato.Costruttore)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiscoMontato.PressioneRottura)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiscoMontato.DataAggiornamento)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.DiscoMontato.LottoNo)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.DiscoMontato.Costruttore)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.DiscoMontato.PressioneRottura)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.DiscoMontato.DataAggiornamento)
                        </td>
                        <td>
                            <a asp-action="Details" asp-controller="Dischi" asp-route-id="@Model.DiscoMontato.Id">Dettagli</a>
                        </td>
                    </tr>
                </tbody>
            </table>

        }




        @if ((Model.Files != null) && (Model.Files.Count > 0))
        {
            <h1>File</h1>

            <table class="table">

                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Files[0].FileName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Files[0].Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Files[0].Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Files[0].CreatedTimestamp)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Files[0].UpdatedTimestamp)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Files[0].ContentType)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Files)
                    {
                        <tr>
                            <td>
                                <a asp-action="Download" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.FileName)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedTimestamp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdatedTimestamp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContentType)
                            </td>
                            <td>
                                <a asp-action="EditFile" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="DeleteFile" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
